<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp"
             xmlns:converters="clr-namespace:WeatherApp.Converters"
             x:Class="WeatherApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Register Converters Here -->
            <converters:WeatherCodeToTextConverter x:Key="WeatherCodeToTextConverter"/>

            <!-- Color Palette -->
            <Color x:Key="PrimaryColor">#4A90E2</Color>
            <Color x:Key="SecondaryColor">#F5F5F5</Color>
            <Color x:Key="AccentColor">#F8E71C</Color>
            <Color x:Key="TextPrimaryColor">#4A4A4A</Color>
            <Color x:Key="TextSecondaryColor">#9B9B9B</Color>

            <!-- Styles -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="8" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
